    print()
    print('üìã Use \"thywill test-recovery\" to simulate complete recovery')
    print('üìã Use \"thywill validate-archives\" for detailed validation')
    
except Exception as e:
    print(f'‚ùå Report generation failed: {e}')
    import traceback
